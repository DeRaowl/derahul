---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";

const posts = (await Astro.glob("./blogs/*.{md,mdx}"))
  .filter((post) => !post.frontmatter.draft)
  .sort(
    (a, b) =>
      new Date(b.frontmatter.pubDate).valueOf() -
      new Date(a.frontmatter.pubDate).valueOf()
  );
---

<Layout title="Rahul Reddy">
  <Nav />
  <main>
    <h1>
      <span class="text-white"> Hi, I'm</span>
      <span
        class="bg-gradient-to-r from-indigo-300 to-purple-400 text-transparent bg-clip-text"
        >Rahul</span
      >
      <span aria-hidden="true">ðŸ‘‹</span>
    </h1>
    <br />
    <p class="text-white">
      A developer who build products from scratch, currently working as a
      Frontend Software engineer at <b class="text-violet-400">BrowserStack</b>.
      I enjoy building cool stuff using <b>Javascript</b> and contribute to open
      source projects. Always up for working on new ideas, learning technologies
      tools.
      <br />
      <br />
      Apart from coding I love to travel and explore new places and
      <a
        href="https://www.instagram.com/raahul_reddy/"
        target="_blank"
        aria-label="Instagram"
        class="text-violet-400 hover:text-violet-400 transition duration-300 ease-in-out border-b-2 border-violet-400"
        rel="noopener noreferrer me">photograph</a
      > them.
    </p>
    <br />
    <section>
      <h2 class="text-white text-xl">Get in touch</h2>
      <div class="mt-2">
        <a
          href="https://github.com/deraowl"
          target="_blank"
          rel="noopener noreferrer me"
          title="Github"
          class="mr-4 text-white hover:text-violet-400 transition duration-300 ease-in-out w-6 inline-block"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            role="img"
            aria-label="Github"
          >
            <path
              d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"
            >
            </path>
          </svg>
        </a>
        <a
          href="https://twitter.com/DeRaowl"
          target="_blank"
          rel="noopener noreferrer me"
          title="Twitter"
          class="mr-4 text-white hover:text-violet-400 transition duration-300 ease-in-out w-6 inline-block"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            role="img"
            aria-label="Twitter"
          >
            <path
              d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"
            >
            </path>
          </svg>
        </a>
        <a
          href="https://www.linkedin.com/in/rahul-m-504441141/"
          target="_blank"
          rel="noopener noreferrer me"
          title="LinkedIn"
          class="mr-4 text-white hover:text-violet-400 transition duration-300 ease-in-out w-6 inline-block"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            role="img"
            aria-label="LinkedIn"
          >
            <path
              d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
            ></path>
            <rect x="2" y="9" width="4" height="12"></rect>
            <circle cx="4" cy="4" r="2"></circle>
          </svg>
        </a>
      </div>
    </section>
    <br />
    <section class="mt-10">
      <h2 class="text-white text-xl">Latest Blog Posts</h2>
      <br />
      <ul class="w-full">
        {
          posts.slice(0, 3).map((post) => {
            return (
              <li
                class="flex flex-row justify-between text-white text-lg bg-gray-800 p-4 rounded-lg mb-4"
                style="list-style: none;"
              >
                <div class="flex flex-row items-center">
                  {post.frontmatter.title}
                </div>
                <div class="text-violet-400 mr-2 hover:text-violet-300 transition duration-300">
                  <a
                    href={post.url}
                    class="flex flex-row items-center justify-center text-violet-400 hover:text-violet-300 transition duration-300 transform hover:scale-110"
                    aria-label="Read more"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-6 w-6"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                      role="img"
                      aria-label="read more"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M14 5l7 7m0 0l-7 7m7-7H3"
                      />
                    </svg>
                  </a>
                </div>
              </li>
            );
          })
        }
      </ul>
      <div>
        <a
          href="https://www.instagram.com/rahulreddy_/"
          class="flex flex-row items-center text-violet-400 hover:text-violet-300 transition duration-300"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            role="img"
            aria-label="View All"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
          </svg>
          <span class="ml-2">View All</span>
        </a>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  main {
    margin: auto;
    padding: 1.5rem;
    max-width: 60ch;
  }
</style>
